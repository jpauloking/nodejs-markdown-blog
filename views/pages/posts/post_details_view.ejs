<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="h1 display-6">Post</h1>
            <div class="d-flex justify-content-between align-items-center">
                <a href="/posts/" class="btn btn-sm btn-outline-primary">All posts</a>
                <div>
                    <a href="/posts/edit/<%= post.slug %>" class="btn btn-sm btn-outline-primary">Edit post</a>
                    <a href="/posts/delete/<%= post.slug %>" class="btn btn-sm btn-outline-danger">Delete post</a>
                </div>
            </div>

            <hr class="text-muted">
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-8 mx-auto">
            <article class="card">
                <div class="card-header bg-white">
                    <h1 class="h1 card-title fs-4">
                        <%= post.title %>
                    </h1>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 card-subtitle text-muted fs-6">
                        <span class="fs-6">
                            <%= post.createdAt?.toLocaleDateString() %>
                        </span>
                        <span class="vr fs-4"></span>
                        <span class="fs-6">O.J. Paul</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-text">
                        <%- post.HTMLBody %>
                    </div>
                </div>
            </article>
        </div>
    </div>
</div>