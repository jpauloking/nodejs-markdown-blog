<div class="container min-vh-100">
    <div class="row min-vh-100 justify-content-center align-items-center">
        <div class="col-md-6 mx-auto">
            <form action="/posts/delete/<%= post.id %>/?_method=delete" method="post">
                <div class="card">
                    <div class="card-header bg-white">
                        <h1 class="h1 card-title display-6">Delete post</h1>
                    </div>
                    <div class="card-body d-flex flex-column gap-3">
                        <div class="">
                            <input type="text" hidden name="id" id="id" value="<%= post.id %>" class="form-control">
                        </div>
                        <div class="">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" name="title" id="title" value="<%= post.title %>" class="form-control">
                        </div>
                        <div class="">
                            <label for="title" class="form-label">Slug</label>
                            <input type="text" name="slug" id="slug" value="<%= post.slug %>" class="form-control">
                        </div>
                        <div class="">
                            <label for="body" class="form-label">Body</label>
                            <textarea type="text" name="body" id="body" class="form-control"><%= post.body %></textarea>
                        </div>
                        <div class="d-flex align-items-center gap-3">
                            <button type="submit" class="btn btn-primary flex-grow-1">Delete post</button>
                            <a href="/posts/details/<%= post.slug %>"
                                class="btn btn-outline-primary flex-grow-1">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>